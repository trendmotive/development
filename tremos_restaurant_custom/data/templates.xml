    <!-- To Manager: After employee submits the Block Crop program -->
    <record id="mail_template_block_crop_program_submitted" model="mail.template">
        <field name="name">Block Crop Program: Submitted For Approval</field>
        <field name="model_id" ref="farm-management.model_block_crop_program" />

<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="service_category_management_view_tree" model="ir.ui.view">
        <field name="name">vehicle.service.category.tree</field>
        <field name="model">vehicle.service.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="service_freq" />
                <field name="total"/>
            </tree>
        </field>
    </record>

    <record id="customer_request_management_view_tree" model="ir.ui.view">
        <field name="name">customer.request.tree</field>
        <field name="model">customer.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" />
                <field name="partner_id" />
                <field name="vehicle_id"/>
                <field name="service_type" />
                <field name="brand_id" />
                <field name="model_id"/>
                <field name="service_type" />
                <field name="model_year" />
                <field name="fuel_type"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_form_check_list_view_tree" model="ir.ui.view">
        <field name="name">vehicle.request.check.list.tree</field>
        <field name="model">vehicle.request.check.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_required" />
            </tree>
        </field>
    </record>
</odoo>